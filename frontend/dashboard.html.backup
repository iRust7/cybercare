    <script>
        // Initialize Dashboard
        document.addEventListener('DOMContentLoaded', async function() {
            try {
                // Check session first
                const loggedIn = await checkSession();
                
                if (!loggedIn) {
                    console.log('Not logged in, redirecting to login...');
                    window.location.replace('login.html');
                    return;
                }
                
                // Get user data from auth.js (set by isLoggedIn)
                const user = getCurrentUser();
                
                if (user) {
                    loadDashboard(user);
                } else {
                    // Fallback if user data missing but logged in (shouldn't happen)
                    console.error('User data missing despite valid session');
                    window.location.replace('login.html');
                }
            } catch (error) {
                console.error('Dashboard initialization error:', error);
            }
        });

        function toggleUserMenu() {
            const dropdown = document.getElementById("userDropdown");
            dropdown.classList.toggle("show");
        }

        document.addEventListener("click", function(e) {
            if (!e.target.closest(".nav-dropdown")) {
                document.getElementById("userDropdown").classList.remove("show");
            }
        });

        function showProfile() {
            alert("Fitur edit profil akan segera hadir!");
        }

        function loadDashboard(user) {
            if (!user) {
                console.log('No user data, redirecting to login...');
                window.location.replace('login.html');
                return;
            }

            document.getElementById("userName").textContent = user.name;
            document.getElementById("userBusiness").textContent = user.businessName;
            document.getElementById("userGreeting").textContent = user.name.split(" ")[0];
            document.getElementById("userAvatar").textContent = user.name.charAt(0);

            if (user.role === "admin") {
                document.getElementById("adminNav").style.display = "flex";
            }

            const levelInfo = getLevelInfo(user);
            document.getElementById("levelNumber").textContent = levelInfo.currentLevel;
            document.getElementById("levelTitle").textContent = levelInfo.currentLevelTitle;
            document.getElementById("xpCurrent").textContent = user.xp + " XP";
            document.getElementById("xpNext").textContent = levelInfo.xpToNextLevel + " XP untuk Level " + levelInfo.nextLevel;
            document.getElementById("xpProgressBar").style.width = levelInfo.progress + "%";

            document.getElementById("totalPoints").textContent = user.totalPoints || 0;
            document.getElementById("dailyStreak").textContent = user.dailyStreak || 0;
            document.getElementById("badgeCount").textContent = (user.badges || []).length;

            document.getElementById("completedMaterials").textContent = (user.completedMaterials || []).length;
            document.getElementById("completedQuizzes").textContent = (user.quizScores || []).length;
            document.getElementById("learningHours").textContent = (user.totalLearningHours || 0).toFixed(1);

            const materialsPercent = ((user.completedMaterials || []).length / 5) * 100;
            document.getElementById("materialsProgress").style.width = materialsPercent + "%";

            const quizzesPercent = ((user.quizScores || []).length / 5) * 100;
            document.getElementById("quizzesProgress").style.width = quizzesPercent + "%";

            const avgScore = user.quizScores && user.quizScores.length > 0
                ? Math.round(user.quizScores.reduce((sum, q) => sum + q.score, 0) / user.quizScores.length)
                : 0;
            document.getElementById("avgScore").textContent = avgScore;

            loadBadges(user);
        }

        function loadBadges(user) {
            const badges = user.badges || [];
            const badgesGrid = document.getElementById("badgesGrid");
            
            const allBadges = [
                { id: "first_material", icon: "üìö", name: "Materi Pertama" },
                { id: "all_materials", icon: "üéì", name: "Mahir Siber" },
                { id: "first_quiz", icon: "‚úÖ", name: "Kuis Pertama" },
                { id: "quiz_master", icon: "üèÖ", name: "Master Kuis" },
                { id: "perfect_score", icon: "üíØ", name: "Skor Sempurna" },
                { id: "week_streak", icon: "üî•", name: "Streak 7 Hari" }
            ];

            badgesGrid.innerHTML = allBadges.map(badge => {
                const earned = badges.find(b => b.id === badge.id);
                return `
                    <div class="badge-item ${earned ? "badge-hover" : "locked"}">
                        <div class="badge-icon">${badge.icon}</div>
                        <div class="badge-name">${badge.name}</div>
                    </div>
                `;
            }).join("");
        }
    </script>
