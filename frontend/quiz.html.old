    <script src="js/main.js"></script>
    <script src="js/auth.js"></script>
    <script>
        let currentQuiz = null;
        let currentQuestionIndex = 0;
        let selectedAnswers = [];
        let quizzesData = [];

        function toggleUserMenu() {
            const dropdown = document.getElementById("userDropdown");
            dropdown.classList.toggle("show");
        }

        document.addEventListener("click", function(e) {
            if (!e.target.closest(".nav-dropdown")) {
                document.getElementById("userDropdown").classList.remove("show");
            }
        });

        async function loadQuizzes() {
            const user = getCurrentUser();
            if (!user) return;

            document.getElementById("userName").textContent = user.name;
            document.getElementById("userBusiness").textContent = user.businessName;
            document.getElementById("userAvatar").textContent = user.avatar || user.name.charAt(0);

            if (user.role === "admin") {
                document.getElementById("adminNav").style.display = "flex";
            }

            const data = await loadJSON('quizzes.json');
            if (!data) return;

            quizzesData = data.quizzes;
            renderQuizSelection(quizzesData, user);
        }

        function renderQuizSelection(quizzes, user) {
            const selection = document.getElementById('quizSelection');
            const userScores = user.quizScores || [];

            selection.innerHTML = quizzes.map((quiz, index) => {
                const userScore = userScores.find(s => s.quizId === quiz.id);
                const isCompleted = userScore && userScore.passed;
                
                return `
                    <div class="quiz-select-card ${isCompleted ? 'completed' : ''} card-enter-${index % 3 + 1}" onclick="startQuiz(${quiz.id})">
                        <div class="quiz-thumbnail">${quiz.icon || 'üéØ'}</div>
                        <div class="quiz-title">${quiz.title}</div>
                        <div class="quiz-description">${quiz.description}</div>
                        <div class="quiz-meta">
                            <span class="quiz-meta-item">üìù ${quiz.questions.length} Pertanyaan</span>
                            ${isCompleted ? '<span class="quiz-meta-item" style="background: #d1fae5; color: #065f46;">‚úì Selesai (' + userScore.score + ')</span>' : ''}
                        </div>
                    </div>
                `;
            }).join('');
        }

        function startQuiz(quizId) {
            currentQuiz = quizzesData.find(q => q.id === quizId);
            if (!currentQuiz) return;

            currentQuestionIndex = 0;
            selectedAnswers = [];

            document.getElementById('quizSelection').style.display = 'none';
            document.getElementById('quizContainer').style.display = 'block';
            document.getElementById('resultContainer').style.display = 'none';

            showQuestion();
        }

        function showQuestion() {
            const question = currentQuiz.questions[currentQuestionIndex];
            const totalQuestions = currentQuiz.questions.length;

            document.getElementById('questionNumber').textContent = `Pertanyaan ${currentQuestionIndex + 1} dari ${totalQuestions}`;
            document.getElementById('progressFill').style.width = `${((currentQuestionIndex + 1) / totalQuestions) * 100}%`;
            document.getElementById('questionText').textContent = question.question;
            
            const optionsList = document.getElementById('optionsList');
            optionsList.innerHTML = question.options.map((option, index) => `
                <div class="option-item" onclick="selectOption(${index})">
                    <div class="option-radio"></div>
                    <div class="option-text">${option}</div>
                </div>
            `).join('');

            document.getElementById('explanationSection').style.display = 'none';
            document.getElementById('nextButton').textContent = currentQuestionIndex === totalQuestions - 1 ? 'Selesai' : 'Selanjutnya';
        }

        function selectOption(index) {
            const options = document.querySelectorAll('.option-item');
            options.forEach((opt, i) => {
                if (i === index) {
                    opt.classList.add('selected');
                } else {
                    opt.classList.remove('selected');
                }
            });

            selectedAnswers[currentQuestionIndex] = index;
        }

        function nextQuestion() {
            if (selectedAnswers[currentQuestionIndex] === undefined) {
                alert('Silakan pilih jawaban terlebih dahulu!');
                return;
            }

            const question = currentQuiz.questions[currentQuestionIndex];
            const selectedAnswer = selectedAnswers[currentQuestionIndex];
            const isCorrect = selectedAnswer === question.correctAnswer;

            // Show explanation
            const options = document.querySelectorAll('.option-item');
            options[question.correctAnswer].classList.add('correct');
            if (!isCorrect) {
                options[selectedAnswer].classList.add('incorrect');
            }

            document.getElementById('explanationSection').style.display = 'block';
            document.getElementById('explanationText').textContent = question.explanation;

            // Wait a bit before moving to next
            setTimeout(() => {
                currentQuestionIndex++;
                if (currentQuestionIndex < currentQuiz.questions.length) {
                    showQuestion();
                } else {
                    showResults();
                }
            }, 2000);
        }

        function showResults() {
            let correctCount = 0;
            currentQuiz.questions.forEach((question, index) => {
                if (selectedAnswers[index] === question.correctAnswer) {
                    correctCount++;
                }
            });

            const score = Math.round((correctCount / currentQuiz.questions.length) * 100);
            const passed = score >= 70;

            // Update user data
            const user = getCurrentUser();
            if (!user.quizScores) user.quizScores = [];
            
            const existingScoreIndex = user.quizScores.findIndex(s => s.quizId === currentQuiz.id);
            const scoreData = {
                quizId: currentQuiz.id,
                score: score,
                passed: passed,
                completedAt: new Date().toISOString().split('T')[0]
            };

            if (existingScoreIndex >= 0) {
                user.quizScores[existingScoreIndex] = scoreData;
            } else {
                user.quizScores.push(scoreData);
            }

            updateUserData({ quizScores: user.quizScores });

            // Award XP
            if (passed) {
                const xp = score === 100 ? 100 : 75;
                awardPoints('passQuiz', xp - 75);
                checkAchievements();

                document.getElementById('xpEarned').textContent = `+${xp} XP`;
            }

            // Show result
            document.getElementById('quizContainer').style.display = 'none';
            document.getElementById('resultContainer').style.display = 'block';

            document.getElementById('resultIcon').textContent = passed ? 'üéâ' : 'üòÖ';
            document.getElementById('resultTitle').textContent = passed ? 'Selamat!' : 'Hampir Berhasil!';
            document.getElementById('resultScore').textContent = score;
            document.getElementById('resultMessage').textContent = passed 
                ? `Anda lulus dengan ${correctCount} jawaban benar dari ${currentQuiz.questions.length} pertanyaan!`
                : `Anda menjawab ${correctCount} dari ${currentQuiz.questions.length} pertanyaan dengan benar. Coba lagi untuk mendapatkan nilai 70 atau lebih!`;
        }

        function retryQuiz() {
            startQuiz(currentQuiz.id);
        }

        function backToSelection() {
            document.getElementById('quizSelection').style.display = 'grid';
            document.getElementById('quizContainer').style.display = 'none';
            document.getElementById('resultContainer').style.display = 'none';
            
            loadQuizzes(); // Reload to update completion status
        }

        document.addEventListener('DOMContentLoaded', async function() {
            const loggedIn = await checkSession();
            if (!loggedIn) {
                window.location.href = 'login.html';
                return;
            }
            loadQuizzes();
        });
    </script>
