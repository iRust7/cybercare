    <style>
        body {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
        }

        .nav-dropdown {
            position: relative;
        }

        .user-menu-trigger {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 8px 12px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .user-menu-trigger:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(212, 175, 55, 0.3);
        }

        .user-dropdown-menu {
            position: absolute;
            top: calc(100% + 8px);
            right: 0;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            min-width: 200px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            z-index: 1000;
        }

        .user-dropdown-menu.show {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .dropdown-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            color: #334155;
            text-decoration: none;
            transition: all 0.2s;
            cursor: pointer;
        }

        .dropdown-item:first-child {
            border-radius: 12px 12px 0 0;
        }

        .dropdown-item:last-child {
            border-radius: 0 0 12px 12px;
            border-top: 1px solid #e2e8f0;
        }

        .dropdown-item:hover {
            background: #f8fafc;
            color: #1e40af;
        }

        .quiz-selection {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 24px;
            margin-bottom: 32px;
        }

        .quiz-select-card {
            background: white;
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            cursor: pointer;
            border: 2px solid transparent;
        }

        .quiz-select-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
            border-color: #1e40af;
        }

        .quiz-select-card.completed {
            background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
        }

        .quiz-thumbnail {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            margin-bottom: 16px;
        }

        .quiz-title {
            font-size: 18px;
            font-weight: 700;
            color: #1e3a8a;
            margin-bottom: 8px;
        }

        .quiz-description {
            color: #64748b;
            font-size: 14px;
            margin-bottom: 12px;
        }

        .quiz-meta {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .quiz-meta-item {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            padding: 4px 12px;
            background: #f1f5f9;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 600;
            color: #475569;
        }

        .quiz-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .quiz-card {
            background: white;
            border-radius: 16px;
            padding: 32px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            margin-bottom: 24px;
        }

        .quiz-header {
            margin-bottom: 32px;
            text-align: center;
        }

        .quiz-progress {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }

        .question-number {
            font-size: 14px;
            font-weight: 600;
            color: #1e40af;
        }

        .progress-bar {
            background: #e2e8f0;
            height: 8px;
            border-radius: 100px;
            overflow: hidden;
            margin-bottom: 24px;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #1e40af, #d4af37);
            transition: width 0.3s ease;
        }

        .question-text {
            font-size: 20px;
            font-weight: 600;
            color: #1e3a8a;
            margin-bottom: 24px;
            line-height: 1.5;
        }

        .options-list {
            display: grid;
            gap: 16px;
        }

        .option-item {
            padding: 16px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .option-item:hover {
            border-color: #1e40af;
            background: #f8fafc;
        }

        .option-item.selected {
            border-color: #1e40af;
            background: #eff6ff;
        }

        .option-item.correct {
            border-color: #10b981;
            background: #d1fae5;
        }

        .option-item.incorrect {
            border-color: #ef4444;
            background: #fee2e2;
        }

        .option-radio {
            width: 20px;
            height: 20px;
            border: 2px solid #cbd5e1;
            border-radius: 50%;
            flex-shrink: 0;
        }

        .option-item.selected .option-radio {
            border-color: #1e40af;
            background: #1e40af;
            position: relative;
        }

        .option-item.selected .option-radio::after {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 8px;
            height: 8px;
            background: white;
            border-radius: 50%;
        }

        .option-text {
            font-size: 16px;
            color: #1e3a8a;
            font-weight: 500;
        }

        .quiz-actions {
            display: flex;
            gap: 12px;
            justify-content: space-between;
            margin-top: 32px;
        }

        .btn-quiz {
            padding: 14px 32px;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(30, 64, 175, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(30, 64, 175, 0.4);
        }

        .btn-secondary {
            background: white;
            color: #64748b;
            border: 2px solid #e2e8f0;
        }

        .btn-secondary:hover {
            border-color: #1e40af;
            color: #1e40af;
        }

        .result-card {
            text-align: center;
            padding: 40px;
        }

        .result-icon {
            font-size: 80px;
            margin-bottom: 24px;
        }

        .result-title {
            font-size: 32px;
            font-weight: 700;
            color: #1e3a8a;
            margin-bottom: 12px;
        }

        .result-score {
            font-size: 48px;
            font-weight: 800;
            color: #d4af37;
            margin-bottom: 16px;
        }

        .result-message {
            font-size: 18px;
            color: #64748b;
            margin-bottom: 32px;
        }

        .xp-earned {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 24px;
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            border-radius: 12px;
            font-size: 18px;
            font-weight: 700;
            color: #92400e;
            margin-bottom: 24px;
        }

        .explanation-section {
            background: #f8fafc;
            padding: 24px;
            border-radius: 12px;
            margin-top: 24px;
            text-align: left;
        }

        .explanation-title {
            font-size: 16px;
            font-weight: 600;
            color: #1e40af;
            margin-bottom: 12px;
        }

        .explanation-text {
            color: #475569;
            line-height: 1.6;
        }
    </style>
</head>
