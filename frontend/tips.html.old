    <main class="app-main">
        <div class="main-container">
            <header class="page-header">
                <div class="header-content">
                    <h1 class="page-title">üí° Tips Keamanan Siber</h1>
                    <p class="page-subtitle">Tips praktis untuk melindungi bisnis Anda dari ancaman siber</p>
                </div>
            </header>

            <div class="filter-section card-enter">
                <div class="filter-buttons">
                    <button class="filter-btn active" data-filter="all">Semua Tips</button>
                    <button class="filter-btn" data-filter="Password">Password</button>
                    <button class="filter-btn" data-filter="Phishing">Phishing</button>
                    <button class="filter-btn" data-filter="Transaksi">Transaksi</button>
                    <button class="filter-btn" data-filter="Perangkat">Perangkat</button>
                    <button class="filter-btn" data-filter="Social Media">Social Media</button>
                </div>
            </div>

            <div class="tips-grid" id="tipsGrid">
                <!-- Tips loaded dynamically -->
            </div>
        </div>
    </main>

    <script src="js/main.js"></script>
    <script src="js/auth.js"></script>
    <script>
        let tipsData = [];
        let readTips = [];

        function toggleUserMenu() {
            const dropdown = document.getElementById("userDropdown");
            dropdown.classList.toggle("show");
        }

        document.addEventListener("click", function(e) {
            if (!e.target.closest(".nav-dropdown")) {
                document.getElementById("userDropdown").classList.remove("show");
            }
        });

        async function loadTips() {
            const user = getCurrentUser();
            if (!user) return;

            document.getElementById("userName").textContent = user.name;
            document.getElementById("userBusiness").textContent = user.businessName;
            document.getElementById("userAvatar").textContent = user.avatar || user.name.charAt(0);

            if (user.role === "admin") {
                document.getElementById("adminNav").style.display = "flex";
            }

            // Load read tips from user data
            readTips = user.readTips || [];

            const data = await loadJSON('tips.json');
            if (!data) return;

            tipsData = data.tips;
            renderTips(tipsData);
            setupFilters();
        }

        function renderTips(tips, filter = 'all') {
            const grid = document.getElementById('tipsGrid');
            
            let filtered = tips;
            if (filter !== 'all') {
                filtered = tips.filter(t => t.category === filter);
            }

            if (filtered.length === 0) {
                grid.innerHTML = `
                    <div class="no-results" style="grid-column: 1/-1;">
                        <div class="no-results-icon">üîç</div>
                        <div class="no-results-text">Tidak ada tips ditemukan untuk kategori ini</div>
                    </div>
                `;
                return;
            }

            grid.innerHTML = filtered.map((tip, index) => {
                const isRead = readTips.includes(tip.id);
                return `
                    <div class="tip-card card-enter-${index % 3 + 1} ${isRead ? 'tip-read' : ''}" onclick="readTip(${tip.id})">
                        <div class="tip-icon">${tip.icon}</div>
                        <div class="tip-title">${tip.title}</div>
                        <div class="tip-description">${tip.description}</div>
                        <div class="tip-footer">
                            <span class="tip-category">${tip.category}</span>
                            <span class="tip-xp">
                                ${isRead ? '‚úì Dibaca' : '‚≠ê +5 XP'}
                            </span>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function readTip(tipId) {
            const user = getCurrentUser();
            if (!user) return;

            // Check if already read
            if (!readTips.includes(tipId)) {
                readTips.push(tipId);
                
                // Update user data
                updateUserData({ readTips: readTips });
                
                // Award XP (first time only)
                awardPoints('readTip');
                
                // Re-render to show as read
                const currentFilter = document.querySelector('.filter-btn.active').getAttribute('data-filter');
                renderTips(tipsData, currentFilter);
            }
        }

        function setupFilters() {
            const filterButtons = document.querySelectorAll('.filter-btn');
            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    const filter = this.getAttribute('data-filter');
                    renderTips(tipsData, filter);
                });
            });
        }

        document.addEventListener('DOMContentLoaded', async function() {
            const loggedIn = await checkSession();
            if (!loggedIn) {
                window.location.href = 'login.html';
                return;
            }
            loadTips();
        });
    </script>
</body>
