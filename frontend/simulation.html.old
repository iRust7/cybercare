    <main class="app-main">
        <div class="main-container">
            <header class="page-header">
                <div class="header-content">
                    <h1 class="page-title">‚ö†Ô∏è Simulasi Ancaman Siber</h1>
                    <p class="page-subtitle">Latih kemampuan Anda mengenali ancaman siber yang nyata</p>
                </div>
            </header>

            <div class="stats-grid card-enter">
                <div class="stat-card">
                    <div class="stat-value" id="totalAttempts">0</div>
                    <div class="stat-label">Total Percobaan</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="correctAnswers">0</div>
                    <div class="stat-label">Jawaban Benar</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="accuracyRate">0%</div>
                    <div class="stat-label">Tingkat Akurasi</div>
                </div>
            </div>

            <div id="threatContainer" class="card-enter-1">
                <!-- Threat scenarios loaded here -->
            </div>

            <div id="completionContainer" style="display: none;" class="card-enter">
                <div class="completion-card">
                    <div class="completion-icon">üéâ</div>
                    <div class="completion-title">Simulasi Selesai!</div>
                    <div class="completion-stats" id="finalStats"></div>
                    <div class="xp-earned-large">
                        <span>‚≠ê</span>
                        <span id="earnedXP">+30 XP</span>
                    </div>
                    <button class="btn-restart" onclick="restartSimulation()">Mulai Lagi</button>
                </div>
            </div>
        </div>
    </main>

    <script src="js/main.js"></script>
    <script src="js/auth.js"></script>
    <script>
        let threatsData = [];
        let currentThreatIndex = 0;
        let correctCount = 0;
        let totalAttempts = 0;

        function toggleUserMenu() {
            const dropdown = document.getElementById("userDropdown");
            dropdown.classList.toggle("show");
        }

        document.addEventListener("click", function(e) {
            if (!e.target.closest(".nav-dropdown")) {
                document.getElementById("userDropdown").classList.remove("show");
            }
        });

        async function loadSimulation() {
            const user = getCurrentUser();
            if (!user) return;

            document.getElementById("userName").textContent = user.name;
            document.getElementById("userBusiness").textContent = user.businessName;
            document.getElementById("userAvatar").textContent = user.avatar || user.name.charAt(0);

            if (user.role === "admin") {
                document.getElementById("adminNav").style.display = "flex";
            }

            const data = await loadJSON('threats.json');
            if (!data) return;

            threatsData = data.threats;
            showThreat();
        }

        function showThreat() {
            if (currentThreatIndex >= threatsData.length) {
                showCompletion();
                return;
            }

            const threat = threatsData[currentThreatIndex];
            const container = document.getElementById('threatContainer');

            container.innerHTML = `
                <div class="threat-card">
                    <div class="threat-header">
                        <span class="threat-type-badge ${threat.type}">${threat.type.toUpperCase()}</span>
                        <div class="threat-title">${threat.title}</div>
                    </div>
                    
                    <div class="threat-content">${threat.content}</div>
                    
                    <div class="threat-meta">
                        ${threat.sender ? `
                        <div class="threat-meta-item">
                            <div class="threat-meta-label">Dari:</div>
                            <div class="threat-meta-value">${threat.sender}</div>
                        </div>` : ''}
                        ${threat.url ? `
                        <div class="threat-meta-item">
                            <div class="threat-meta-label">URL:</div>
                            <div class="threat-meta-value">${threat.url}</div>
                        </div>` : ''}
                        ${threat.subject ? `
                        <div class="threat-meta-item">
                            <div class="threat-meta-label">Subject:</div>
                            <div class="threat-meta-value">${threat.subject}</div>
                        </div>` : ''}
                    </div>

                    <div class="action-buttons">
                        <button class="btn-action btn-safe" onclick="checkAnswer(false)">
                            ‚úì Ini Aman
                        </button>
                        <button class="btn-action btn-threat" onclick="checkAnswer(true)">
                            ‚ö†Ô∏è Ini Ancaman
                        </button>
                    </div>

                    <div id="feedback" class="feedback"></div>

                    <div id="flagsSection" style="display: none;">
                        <div class="flags-section">
                            <div class="flags-title">üö© ${threat.isThreat ? 'Red Flags (Tanda Bahaya)' : 'Green Flags (Tanda Aman)'}</div>
                            <div class="flags-list">
                                ${threat.flags.map(flag => `
                                    <div class="flag-item">
                                        <span class="flag-icon">${threat.isThreat ? 'üî¥' : 'üü¢'}</span>
                                        <span>${flag}</span>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                        <button class="btn-next" onclick="nextThreat()">Lanjut ke Skenario Berikutnya</button>
                    </div>
                </div>
            `;
        }

        function checkAnswer(userAnswer) {
            const threat = threatsData[currentThreatIndex];
            const isCorrect = userAnswer === threat.isThreat;
            
            totalAttempts++;
            if (isCorrect) correctCount++;

            // Update stats
            document.getElementById('totalAttempts').textContent = totalAttempts;
            document.getElementById('correctAnswers').textContent = correctCount;
            document.getElementById('accuracyRate').textContent = Math.round((correctCount / totalAttempts) * 100) + '%';

            // Show feedback
            const feedback = document.getElementById('feedback');
            feedback.className = 'feedback ' + (isCorrect ? 'correct' : 'incorrect');
            feedback.innerHTML = `
                <div class="feedback-title">${isCorrect ? '‚úì Benar!' : '‚úó Kurang Tepat'}</div>
                <div class="feedback-text">${threat.explanation}</div>
            `;

            // Show flags and next button
            document.getElementById('flagsSection').style.display = 'block';

            // Disable action buttons
            document.querySelectorAll('.btn-action').forEach(btn => {
                btn.disabled = true;
                btn.style.opacity = '0.6';
                btn.style.cursor = 'not-allowed';
            });
        }

        function nextThreat() {
            currentThreatIndex++;
            showThreat();
        }

        function showCompletion() {
            document.getElementById('threatContainer').style.display = 'none';
            document.getElementById('completionContainer').style.display = 'block';

            const accuracy = Math.round((correctCount / totalAttempts) * 100);
            document.getElementById('finalStats').textContent = 
                `Anda menjawab ${correctCount} dari ${totalAttempts} skenario dengan benar (${accuracy}%)`;

            // Award XP
            awardPoints('completeSimulation');
            checkAchievements();
        }

        function restartSimulation() {
            currentThreatIndex = 0;
            correctCount = 0;
            totalAttempts = 0;
            document.getElementById('completionContainer').style.display = 'none';
            document.getElementById('threatContainer').style.display = 'block';
            document.getElementById('totalAttempts').textContent = '0';
            document.getElementById('correctAnswers').textContent = '0';
            document.getElementById('accuracyRate').textContent = '0%';
            showThreat();
        }

        document.addEventListener('DOMContentLoaded', async function() {
            const loggedIn = await checkSession();
            if (!loggedIn) {
                window.location.href = 'login.html';
                return;
            }
            loadSimulation();
        });
    </script>
</body>
</html>
