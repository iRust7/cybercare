<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Materi Edukasi - CyberCare</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/animations.css">
    <style>
        body {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
        }

        .nav-dropdown {
            position: relative;
        }

        .user-menu-trigger {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 8px 12px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .user-menu-trigger:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(212, 175, 55, 0.3);
        }

        .user-dropdown-menu {
            position: absolute;
            top: calc(100% + 8px);
            right: 0;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            min-width: 200px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            z-index: 1000;
        }

        .user-dropdown-menu.show {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .dropdown-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            color: #334155;
            text-decoration: none;
            transition: all 0.2s;
            cursor: pointer;
        }

        .dropdown-item:first-child {
            border-radius: 12px 12px 0 0;
        }

        .dropdown-item:last-child {
            border-radius: 0 0 12px 12px;
            border-top: 1px solid #e2e8f0;
        }

        .dropdown-item:hover {
            background: #f8fafc;
            color: #1e40af;
        }

        .filter-section {
            background: white;
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 32px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .filter-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
        }

        .filter-btn {
            padding: 12px 24px;
            border: 2px solid #e2e8f0;
            background: white;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 600;
            color: #64748b;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .filter-btn:hover {
            border-color: #1e40af;
            color: #1e40af;
            transform: translateY(-2px);
        }

        .filter-btn.active {
            background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%);
            border-color: #1e40af;
            color: white;
            box-shadow: 0 4px 12px rgba(30, 64, 175, 0.3);
        }

        .materials-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 24px;
        }

        .material-card {
            background: white;
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            border: 2px solid transparent;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .material-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #1e40af, #d4af37);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .material-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
            border-color: #1e40af;
        }

        .material-card:hover::before {
            transform: scaleX(1);
        }

        .material-icon {
            width: 64px;
            height: 64px;
            background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            margin-bottom: 16px;
            box-shadow: 0 4px 12px rgba(30, 64, 175, 0.2);
        }

        .material-title {
            font-size: 20px;
            font-weight: 700;
            color: #1e3a8a;
            margin-bottom: 12px;
            line-height: 1.3;
        }

        .material-meta {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            margin-bottom: 12px;
        }

        .meta-badge {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            padding: 4px 12px;
            background: #f1f5f9;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 600;
            color: #475569;
        }

        .meta-badge.category {
            background: #dbeafe;
            color: #1e40af;
        }

        .meta-badge.duration {
            background: #fef3c7;
            color: #92400e;
        }

        .meta-badge.level {
            background: #d1fae5;
            color: #065f46;
        }

        .material-summary {
            color: #64748b;
            line-height: 1.6;
            font-size: 14px;
            margin-bottom: 16px;
        }

        .material-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 16px;
            border-top: 1px solid #e2e8f0;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-badge.completed {
            background: #d1fae5;
            color: #065f46;
        }

        .status-badge.in-progress {
            background: #fef3c7;
            color: #92400e;
        }

        .status-badge.not-started {
            background: #f1f5f9;
            color: #475569;
        }

        .xp-badge {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 14px;
            font-weight: 700;
            color: #d4af37;
        }
    </style>
</head>
<body class="page-transition">
    <nav class="app-nav">
        <div class="nav-container">
            <div class="logo">
                <span class="logo-icon">üõ°Ô∏è</span>
                <span class="logo-text">CyberCare</span>
            </div>
            <div class="nav-menu">
                <a href="dashboard.html" class="nav-item">
                    <span class="nav-icon">üè†</span>
                    <span>Dashboard</span>
                </a>
                <a href="materials.html" class="nav-item active">
                    <span class="nav-icon">üìö</span>
                    <span>Materi</span>
                </a>
                <a href="quiz.html" class="nav-item">
                    <span class="nav-icon">üéØ</span>
                    <span>Kuis</span>
                </a>
                <a href="simulation.html" class="nav-item">
                    <span class="nav-icon">‚ö†Ô∏è</span>
                    <span>Simulasi</span>
                </a>
                <a href="tips.html" class="nav-item">
                    <span class="nav-icon">üí°</span>
                    <span>Tips</span>
                </a>
                <a href="admin.html" class="nav-item" id="adminNav" style="display:none;">
                    <span class="nav-icon">‚öôÔ∏è</span>
                    <span>Admin</span>
                </a>
            </div>
            <div class="nav-dropdown">
                <div class="user-menu-trigger" onclick="toggleUserMenu()">
                    <div class="user-avatar" id="userAvatar">B</div>
                    <div class="user-info">
                        <div class="user-name" id="userName">Loading...</div>
                        <div class="user-business" id="userBusiness">...</div>
                    </div>
                    <span>‚ñº</span>
                </div>
                <div class="user-dropdown-menu" id="userDropdown">
                    <a href="dashboard.html" class="dropdown-item">
                        <span>üè†</span>
                        <span>Dashboard</span>
                    </a>
                    <div class="dropdown-item" onclick="handleLogout()">
                        <span>üö™</span>
                        <span>Logout</span>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main class="app-main">
        <div class="main-container">
            <header class="page-header">
                <div class="header-content">
                    <h1 class="page-title">üìö Materi Pembelajaran</h1>
                    <p class="page-subtitle">Pelajari konsep keamanan siber untuk melindungi bisnis Anda</p>
                </div>
            </header>

            <div class="filter-section card-enter">
                <div class="filter-buttons">
                    <button class="filter-btn active" data-filter="all">Semua Materi</button>
                    <button class="filter-btn" data-filter="completed">‚úì Selesai</button>
                    <button class="filter-btn" data-filter="in-progress">‚è≥ Sedang Dipelajari</button>
                    <button class="filter-btn" data-filter="not-started">üìñ Belum Mulai</button>
                </div>
            </div>

            <div class="materials-grid" id="materialsGrid">
                <!-- Materials loaded dynamically -->
            </div>
        </div>
    </main>

    <script src="js/main.js"></script>
    <script src="js/auth.js"></script>
    <script>
        function toggleUserMenu() {
            const dropdown = document.getElementById("userDropdown");
            dropdown.classList.toggle("show");
        }

        document.addEventListener("click", function(e) {
            if (!e.target.closest(".nav-dropdown")) {
                document.getElementById("userDropdown").classList.remove("show");
            }
        });

        async function loadMaterials() {
            const user = getCurrentUser();
            if (!user) return;

            document.getElementById("userName").textContent = user.name;
            document.getElementById("userBusiness").textContent = user.businessName;
            document.getElementById("userAvatar").textContent = user.avatar || user.name.charAt(0);

            if (user.role === "admin") {
                document.getElementById("adminNav").style.display = "flex";
            }

            const materials = await loadJSON('materials.json');
            if (!materials) return;

            renderMaterials(materials.materials, user);
        }

        function renderMaterials(materials, user, filter = 'all') {
            const grid = document.getElementById('materialsGrid');
            const completedMaterials = user.completedMaterials || [];
            const inProgressMaterials = user.inProgressMaterials || [];

            const materialsWithStatus = materials.map(mat => {
                let status = 'not-started';
                if (completedMaterials.includes(mat.id)) {
                    status = 'completed';
                } else if (inProgressMaterials.includes(mat.id)) {
                    status = 'in-progress';
                }
                return { ...mat, status };
            });

            let filtered = materialsWithStatus;
            if (filter !== 'all') {
                filtered = materialsWithStatus.filter(m => m.status === filter);
            }

            grid.innerHTML = filtered.map((material, index) => `
                <div class="material-card card-enter-${index % 3 + 1}" onclick="window.location.href='material-detail.html?id=${material.id}'">
                    <div class="material-icon">${material.icon || 'üìö'}</div>
                    <div class="material-title">${material.title}</div>
                    <div class="material-meta">
                        <span class="meta-badge category">${material.category}</span>
                        <span class="meta-badge duration">‚è±Ô∏è ${material.duration}</span>
                        <span class="meta-badge level">üìä ${material.level}</span>
                    </div>
                    <div class="material-summary">${material.summary || material.description}</div>
                    <div class="material-footer">
                        <span class="status-badge ${material.status}">
                            ${getStatusText(material.status)}
                        </span>
                        <span class="xp-badge">
                            <span>‚≠ê</span>
                            <span>+50 XP</span>
                        </span>
                    </div>
                </div>
            `).join('');
        }

        function getStatusText(status) {
            const statusMap = {
                'completed': '‚úì Selesai',
                'in-progress': '‚è≥ Sedang Belajar',
                'not-started': 'üìñ Belum Mulai'
            };
            return statusMap[status] || 'Belum Mulai';
        }

        function setupFilters() {
            const filterButtons = document.querySelectorAll('.filter-btn');
            filterButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    const filter = this.getAttribute('data-filter');
                    const user = getCurrentUser();
                    const materials = await loadJSON('materials.json');
                    
                    if (materials && user) {
                        renderMaterials(materials.materials, user, filter);
                    }
                });
            });
        }

        document.addEventListener('DOMContentLoaded', async function() {
            const loggedIn = await checkSession();
            if (!loggedIn) {
                window.location.href = 'login.html';
                return;
            }
            loadMaterials();
            setupFilters();
        });
    </script>
</body>
</html>
